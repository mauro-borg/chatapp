extends layout

block content
  h1 Chat Rooms
  a.btn.btn-primary(href="/admin/rooms/add") Create a new chat room
  table.table.table-striped
    thead
      tr
        th 
        th Name
        th Edit
        th Id
    tbody
      each room in rooms
        tr
          td(style="width: 50px;"): a(href="/admin/rooms/delete/#{room.id}")
            span
              include ../node_modules/bootstrap-icons/icons/x-square-fill.svg
          td= room.name
          td(style="width: 50px;"): a(href="/admin/rooms/edit/#{room.id}")
            span
              include ../node_modules/bootstrap-icons/icons/pencil-square.svg
          td= room.id
